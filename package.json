{
  "name": "eisenhower-matrix-amplify",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prettier": "prettier --write \"**/*.{ts,tsx,js,jsx}\"",
    "prettier:verify": "prettier --list-different \"**/*.{ts,tsx,js,jsx}\"",
    "postinstall": "husky install",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@aws-amplify/ui-react": "^2.1.5",
    "aws-amplify": "^4.3.11",
    "next": "12.0.7",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/node": "17.0.7",
    "@types/react": "17.0.38",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.6.0",
    "eslint-config-next": "12.0.7",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.5",
    "prettier": "^2.5.1",
    "typescript": "4.5.4"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "lint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
